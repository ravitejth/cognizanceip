{
  "env": {
    "browser": true,
    "node": true,
    "jquery": true
  },
  "extends": "standard",
  "plugins": [
    "standard"
  ],
  "rules": {
    "indent": ["error", 2, {
      "SwitchCase": 1,
      "VariableDeclarator": { "var": 2, "let": 2, "const": 3 }
    }],
    "no-path-concat": 0,
    "no-unused-vars": 1,
    "no-multi-spaces": 0,
    "no-multiple-empty-lines": 0,
    "one-var": [0, "always"],
    "padded-blocks": 0,
    "quotes": [1, "single"],
    "semi": [2, "always"],
    "space-before-function-paren": 0
  }
}
